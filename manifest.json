{
	"manifest_version": 3,
	"name": "D-Level AI Analyzer",
	"version": "1.0",
	"description": "Analyzes YouTube and YouTube Kids videos for their dopaminergic profile using Gemini AI.",
	"permissions": ["storage", "activeTab", "scripting", "sidePanel"],
	"host_permissions": [
		"https://generativelanguage.googleapis.com/",
		"https://www.youtube.com/*",
		"https://www.youtubekids.com/*"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"side_panel": {
		"default_path": "sidepanel.html"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/watch*", "https://www.youtubekids.com/watch*"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["prompt.txt"],
			"matches": ["<all_urls>"]
		}
	]
}
