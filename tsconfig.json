{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"types": ["chrome"],
		"lib": ["dom", "es2017"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
